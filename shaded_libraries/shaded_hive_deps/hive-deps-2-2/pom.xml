         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <groupId>com.alibaba.alink</groupId>
    <artifactId>hive-deps-2-2</artifactId>
    <version>0.1</version>
    <packaging>jar</packaging>

    <modelVersion>4.0.0</modelVersion>

    <properties>
        <hive.version>2.2.0</hive.version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.2</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <filters>
                                <filter>
                                    <artifact>org.datanucleus:datanucleus-core</artifact>
                                    <excludes>
                                        <exclude>plugin.xml</exclude>
                                        <exclude>org/datanucleus/plugin/NonManagedPluginRegistry.class</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.datanucleus:datanucleus-rdbms</artifact>
                                    <excludes>
                                        <exclude>plugin.xml</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>org.datanucleus:datanucleus-api-jdo</artifact>
                                    <excludes>
                                        <exclude>plugin.xml</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>


